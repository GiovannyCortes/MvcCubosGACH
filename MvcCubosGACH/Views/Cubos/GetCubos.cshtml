@model IEnumerable<MvcCubosGACH.Models.Cubo>

@{
    ViewData["Title"] = "GetCubos";
}

<h1 class="text-primary">Listado de cubos</h1>

<p>
    <a asp-controller="Cubos" asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form method="post">
    <label class="form-label">Marca del cubo:</label>
    <input type="text" name="marca" class="form-control" required />
    <button class="btn btn-success my-3">Buscar</button>
</form>

<table class="table table-dark table-bordered" style="text-align: center;">
    <thead>
        <tr>
            <th>IdCubo</th>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Imagen</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.IdCubo</td>
            <td>@item.Nombre</td>
            <td>@item.Marca</td>
            <td>
                <img src="@item.Imagen" width="150" />
            </td>
            <td>@item.Precio €</td>
            <td>
                <a asp-controller="Pedidos" asp-action="InsertPedido" asp-route-idCubo="@item.IdCubo" class="btn btn-success">
                    Comprar cubo
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
